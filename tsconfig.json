{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "baseUrl": "./src/",
    "paths": {
      "@public/*": ["../public/*"],
      "@/*": ["*"],
      "@shared/*": ["shared/*"],
    },
  },
  "include": [
    "tsconfig.app.json",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "src/next-env.d.tss", "postcss.config.mjs"  ],
  "exclude": [
    "node_modules"
  ]
}
